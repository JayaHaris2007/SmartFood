rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // User profiles
    match /users/{userId} {
      // Allow reading if it's your own profile OR if the profile belongs to a restaurant (public discovery)
      allow read: if isAuthenticated() && (request.auth.uid == userId || resource.data.role == 'restaurant');
      
      // Allow creation/updates only by the owner
      // TODO: Consider preventing role changes after creation if strict security is needed
      allow write: if isOwner(userId);
    }

    // Menu Items
    match /menuItems/{itemId} {
      // Anyone can read menu items
      allow read: if true;
      // Only the restaurant owner can create/update/delete their own items
      allow create: if isAuthenticated() && request.resource.data.restaurantId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.restaurantId == request.auth.uid;
    }

    // Orders
    match /orders/{orderId} {
      // Users can read/create their own orders
      // Restaurants can read orders where restaurantId matches their uid
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        resource.data.restaurantId == request.auth.uid
      );
      allow update: if isAuthenticated() && (
        // User can update status (e.g. cancel)
        resource.data.userId == request.auth.uid ||
        // Restaurant can update status
        resource.data.restaurantId == request.auth.uid
      );
    }
  }
}
